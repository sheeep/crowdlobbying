{% block header %}
    {% if campaign.archived %}
        <section class="campaign-info campaign-info--archived">
            <div class="viewport-width">
                <div class="page-width">
                    <div class="layout-width">
                        <div class="campaign-info__content"><p class="lead">{% trans %}Diese Kampagne ist archiviert.{% endtrans %}</p></div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <header class="header {{ headerClass }}" id="header">
        <h1 class="header__logotype"><a class="header__home-link" href="/">
                <svg class="logotype">
                    <use xlink:href="#spriteIcon-logo-crowd-lobbying-quer"></use>
                </svg>
                <span class="visually-hidden">{% if campaign is defined and campaign.heroSubline|length > 0 %}{{ campaign.heroSubline }}{% else %}{% trans %}Crowd-Lobbying{% endtrans %}{% endif %}</span></a></h1>
        <button class="hamburger hamburger--spin" id="hamburger" type="button" onclick="app.menu.toggle()"><span
                    class="hamburger-box"><span class="hamburger-inner"></span></span></button>
    </header>
{% endblock %}
{% block body %}{% endblock %}
{% if hasFAQ %}
    <section class="faq {{ sectionColor }}">
        <div class="viewport-width vertical-space">
            <div class="page-width">
                <div class="layout-width">
                    <div class="richtext readable-width">
                        {% if campaign is defined %}
                            <h1>{{ campaign.faqTitle }}</h1>
                            {{ campaign.faqText|raw }}
                        {% else %}
                            <div class="row">
                                <div class="col">
                                    <ul>
                                        {% for campaign in campaigns %}
                                            <li><a href="https://{{ campaign.slug }}.{{ app.request.host }}/">{{ campaign }}</a></li>
                                        {% else %}
                                            <li>Keine Kampagnen gefunden... #sadTimes</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}
<section class="scroll-to-top {{ sectionColor }}">
    <div class="viewport-width">
        <div class="page-width">
            <div class="layout-width scroll-to-top__inner">
                <button class="action-button outline icon icon--up"
                        onclick="utils.scrollTo('body')">{% trans %}Nach oben{% endtrans %}
                </button>
            </div>
        </div>
    </div>
</section>
<footer class="footer">
    <div class="viewport-width grey vertical-space">
        <div class="page-width">
            <div class="layout-width">
                <section class="cols footer__section footer__about">
                    <div class="col col-6"><h2 class="no-space">{% trans %}Über uns{% endtrans %}</h2>
                        <p>
                            {% trans %}Crowd-Lobbying ist eine unabhängige Schweizer Kampagnenplattform. Wir ermöglichen Menschen, Nachrichten an das Parlament zu schicken, die ihnen am Herzen liegen. Gemeinsam setzen wir uns ein für eine Schweiz, in der wir leben wollen. Die Plattform ist ein Community-Projekt und wurde an den Campaign Hackdays 2019 entwickelt.{% endtrans %}
                        </p>
