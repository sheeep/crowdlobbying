{% if sectionColor is not defined %}{% set sectionColor = '' %}{% endif %}
{% if headerClass is not defined %}{% set headerClass = '' %}{% endif %}
{% if hasFAQ is not defined %}{% set hasFAQ = true %}{% endif %}

{% set title = 'default_title'|trans %}
{% set description = 'default_description'|trans %}
{% set ogImage = '/assets/meta/crowd-lobbying-og-image.jpg'|trans %}
{% set ogDescription = 'default_og_description'|trans %}

{% if campaign is defined %}
    {% set description = campaign.campaignDescription|trim %}
    {% set title = campaign.campaignTitle %}
    {% set ogImage = app.request.getUriForPath(vich_uploader_asset(campaign, 'ogImageFile' ~ (app.request.locale|capitalize))) %}
    {% set ogDescription = campaign.ogCampaignDescription %}
{% endif %}

